<UserControl x:Class="MixItUp.WPF.Controls.Overlay.OverlayTextEditorV3Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MixItUp.WPF.Controls.Overlay"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox Text="{Binding RelativeSource={RelativeSource Self}, Path=Text}" Style="{StaticResource OverlayEditorMultiLineTextBox}" MinHeight="250" />
    </Grid>
</UserControl>