<UserControl x:Class="MixItUp.WPF.Controls.Chat.ChatImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:WindowsFormIntegration="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
             xmlns:winForms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d" VerticalAlignment="Center">
    <Grid Margin="5,0,5,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Image x:Name="Image" Grid.Column="0" Source="{Binding Path=ImageURL, TargetNullValue={x:Null}}" ToolTip="{Binding Name}" Visibility="Collapsed" Loaded="Image_Loaded" />
        <WindowsFormIntegration:WindowsFormsHost x:Name="WindowsFormHostGifImage" Visibility="Collapsed" ToolTip="{Binding Name}" Loaded="Image_Loaded">
            <winForms:PictureBox x:Name="GifImage" />
        </WindowsFormIntegration:WindowsFormsHost>
        <Image x:Name="SVGImage" Grid.Column="0" Visibility="Collapsed" Source="{Binding Path=ImageURL, Converter={svgc:SvgImageConverter}, Mode=OneWay, TargetNullValue={x:Null}}" ToolTip="{Binding Name}"  Loaded="Image_Loaded" />
        <TextBlock x:Name="Text" Grid.Column="1" Visibility="Collapsed" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <TextBlock x:Name="AltText" Grid.Column="1" Visibility="Collapsed" Text="{Binding Name}" Margin="10,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
